---
import { Image } from "astro:assets";
import type { ComponentProps } from "../../../../globals/types/component-props";
import type { TranslationsType } from "../../../../globals/types/translations";
import icon1 from "../assets/icon1.png";
import icon2 from "../assets/icon2.png";
import icon3 from "../assets/icon3.png";
import bg from "../assets/s3-desktop.jpg";

interface Props {
  componentProps: ComponentProps;
}
const { componentProps } = Astro.props;

const bullets: {
  icon: ImageMetadata;
  para: TranslationsType;
}[] = [
  {
    icon: icon1,
    para: {
      en: `<span class="font-extrabold text-secondary">TRUST</span> - ${componentProps.brandObj.name} is overseen by various regulators in the European Union.`,
      it: ``,
      tr: ``,
      ro: ``,
      ar: ``,
      de: ``,
      es: ``,
      sv: ``,
      pt: ``,
      fi: ``,
      pl: ``,
      hu: ``,
      th: ``,
      ms: ``,
      vi: ``,
    },
  },
  {
    icon: icon2,
    para: {
      en: `<span class="font-extrabold text-secondary">PROTECTED DATA</span> - We protect your data with the most advanced security methods available.`,
      it: ``,
      tr: ``,
      ro: ``,
      ar: ``,
      de: ``,
      es: ``,
      sv: ``,
      pt: ``,
      fi: ``,
      pl: ``,
      hu: ``,
      th: ``,
      ms: ``,
      vi: ``,
    },
  },
  {
    icon: icon3,
    para: {
      en: `<span class="font-extrabold text-secondary">SUPPORT </span> - Enjoy customized, multilingual support from our dedicated customer service team.`,
      it: ``,
      tr: ``,
      ro: ``,
      ar: ``,
      de: ``,
      es: ``,
      sv: ``,
      pt: ``,
      fi: ``,
      pl: ``,
      hu: ``,
      th: ``,
      ms: ``,
      vi: ``,
    },
  },
];
---

<section class="relative p-4 sm:p-7 md:p-9 lg:p-10 xl:p-12">
  <Image
    src={bg}
    alt="Background"
    class="absolute inset-0 z-0 h-full w-full object-cover object-left lg:object-center"
    widths={[320, 576, 640, 768, 1024, 1280, 1536, bg.width]}
    sizes={`
      (max-width: 320px) 576px,
      (max-width: 576px) 640px,
      (max-width: 640px) 768px,
      (max-width: 768px) 1024px,
      (max-width: 1024px) 1280px,
      (max-width: 1280px) 1536px,
      100vw
    `}
  />
  <div
    class="relative z-10 container flex flex-col items-start justify-around gap-4 text-center text-white sm:flex-row sm:flex-wrap sm:gap-6"
  >
    {
      bullets.map((bullet) => (
        <div class="grid max-w-[35ch] place-items-center gap-2">
          <Image
            src={bullet.icon}
            alt="Background"
            class="h-16 w-auto"
            widths={[320, 576, 640, 768, 1024, 1280, 1536, bullet.icon.width]}
            sizes={`
              (max-width: 320px) 320px,
              (max-width: 576px) 576px,
              640px
            `}
          />
          <p set:html={bullet.para[componentProps.lang]} />
        </div>
      ))
    }
  </div>
</section>
