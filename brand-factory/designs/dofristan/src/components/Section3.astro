  vi: "",
  showcase: `Nullam quis ante. Etiam ${componentProps.brandObj.name} sit amet orci eget eros faucibus tincidunt. Duis leo. Sed fringilla mauris sit amet nibh. Donec sodales sagittis magna. Sed consequat, leo eget bibendum sodales, augue velit cursus nunc.`,
};

const couchData: TranslationsType = {
  en: `Online Forex Trading Coach`,
  it: "",
  tr: "",
  ro: "",
  ar: "",
  de: "",
  es: ``,
  sv: ``,
  pt: "",
