---

<section
  id="section3"
  class="section3 3xl:py-12 bg-custom-background py-4 lg:py-6 2xl:py-8"
>
  <div class="container grid place-items-center gap-6 2xl:gap-16">
    <Image
      src={quotes}
      alt="Quote"
      class=""
      widths={[320, 576, 640, 768, 1024, 1280, 1536, quotes.width]}
      sizes={`46px`}
    />
    <p set:html={quote[componentProps.lang]} class="text-center italic" />
    <div class="grid place-items-center gap-2 text-center lg:gap-4">
      <Image
        src={coach}
        alt="Quote"
        class="rounded-full"
        widths={[320, 576, 640, 768, 1024, 1280, 1536, coach.width]}
        sizes={`46px`}
      />
      <p set:html={couchData[componentProps.lang]} class="text-sm font-bold" />
    </div>
  </div>
</section>
