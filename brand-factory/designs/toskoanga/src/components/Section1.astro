---
import { showcase } from "../../../../globals/features/showcase/text";
import type { ComponentProps } from "../../../../globals/types/component-props";
import { Features } from "../../../../globals/types/enums";
import type { TranslationsType } from "../../../../globals/types/translations";
import { CustomLineChart } from "./custom-line-chart";

interface Props {
  componentProps: ComponentProps;
}
const { componentProps } = Astro.props;

const title: TranslationsType = {
  en: `Bitcoin, 2025 - a year of growth and volatility? `,
  it: ``,
  tr: ``,
  ro: ``,
  ar: `البيتكوين، 2025 - سنة من النمو والتقلبات؟`,
  de: ``,
  es: ``,
  sv: `Bitcoin, 2025 - ett år av tillväxt och volatilitet?`,
  pt: ``,
  fi: ``,
  pl: `Bitcoin, 2025 - rok wzrostu i zmienności?`,
  hu: ``,
  th: ``,
  ms: ``,
  vi: ``,
};

const paras: TranslationsType[] = [
  {
    en: `Bitcoin has shown significant price fluctuations throughout last year. The new year seems to be a focal point for BITCOIN. From institutional adoption to regulatory developments, multiple factors continue to shape its trajectory.`,
    it: ``,
    tr: ``,
    ro: ``,
    ar: `شهد البيتكوين تقلبات كبيرة في الأسعار خلال العام الماضي. يبدو أن العام الجديد سيكون نقطة تحول رئيسية للبيتكوين. من التبني المؤسسي إلى التطورات التنظيمية، لا تزال عدة عوامل تشكل مستقبله.`,
    de: ``,
    es: ``,
    sv: `Bitcoin visade stora prisrörelser under det gångna året. Det nya året verkar vara en nyckelpunkt för BITCOIN. Från institutionell adoption till regulatoriska förändringar – flera faktorer fortsätter att forma dess bana.`,
    pt: ``,
    fi: ``,
    pl: `Bitcoin wykazał znaczące wahania cenowe w ubiegłym roku. Nowy rok zapowiada się jako kluczowy moment dla BITCOINA. Od adopcji instytucjonalnej po zmiany regulacyjne - wiele czynników nadal kształtuje jego trajektorię.`,
    hu: ``,
    th: ``,
    ms: ``,
    vi: ``,
  },
];

const chartTitle: TranslationsType = {
  en: `Price`,
  it: ``,
  tr: ``,
  ro: ``,
  ar: `السعر`,
  de: ``,
  es: ``,
  sv: `Pris`,
  pt: ``,
  fi: ``,
  pl: `Cena`,
  hu: ``,
  th: ``,
  ms: ``,
  vi: ``,
};
---

<section id="section1" class="section1 py-y-spacing">
  <div class="text-paras container flex flex-col gap-6">
    <h2
      class="text-heading2 text-accent-blue font-black text-balance uppercase"
      set:html={componentProps.features?.includes(Features.showcase)
        ? showcase({
            words: 5,
          })
        : title[componentProps.lang]}
    />

    {
      paras.map((para) => (
        <p
          set:html={
            componentProps.features?.includes(Features.showcase)
              ? showcase({
                  words: 50,
                })
              : para[componentProps.lang]
          }
          class=""
        />
      ))
    }

    <div>
      <CustomLineChart
        title={componentProps.features?.includes(Features.showcase)
          ? showcase({
              words: 1,
            })
          : chartTitle[componentProps.lang]}
        client:load
      />
    </div>
  </div>
</section>
