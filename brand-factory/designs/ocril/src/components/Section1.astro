      set:html={componentProps.features?.includes(Features.showcase)
        ? showcase({
            words: 10,
          })
        : title[componentProps.lang]}
    />
    <div
      class="counter flex w-full grow flex-col gap-4 md:grid md:grid-cols-2 md:gap-6"
    >
      {
        bullets.map((bullet, index) => (
          <Card
            className={cn(
              `flex flex-col gap-4 overflow-hidden rounded-md border-2 border-black p-4`,
              bullets.length - 1 === index ? "col-span-2" : "",
            )}
          >
            <div
              class={cn(
                `flex flex-row items-center justify-between gap-4 md:gap-8`,
                bullets.length - 1 === index && "md:flex-col-reverse",
              )}
            >
              <h3
                class="text-[16px] font-bold"
                set:html={
                  componentProps.features?.includes(Features.showcase)
                    ? showcase({
                        words: 3,
                      })
                    : bullet.title[componentProps.lang]
                }
              />
              <div class="text-primary text-8xl">
                <SVGMask url={bullet.icon} />
              </div>
            </div>
            <p>
              {componentProps.features?.includes(Features.showcase)
                ? showcase({
                    words: 30,
