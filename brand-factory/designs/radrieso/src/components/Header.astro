<header id="header" class="relative overflow-clip">
  <Image
    src={bgDesktop}
    alt="Apple Laptop Diploma"
    class="pointer-events-none absolute inset-0 z-0 block h-full w-full object-cover"
    widths={[320, 576, 640, 768, 1024, 1280, 1536, bgDesktop.width]}
    sizes={`100vw`}
  />
  <div class="relative z-10">
    <Image
      src={candlesRight}
      alt="Candles"
      class="pointer-events-none absolute inset-0 right-auto -left-[10%] z-0 block hidden h-full w-1/2 scale-x-[-1] object-cover 2xl:block"
      widths={[320, 576, 640, 768, 1024, 1280, 1536, candlesRight.width]}
      sizes={`100vw`}
    />
    <Image
      src={candlesLeft}
      alt="Candles"
      class="pointer-events-none absolute inset-0 -right-[10%] left-auto z-0 block hidden h-full w-1/2 scale-x-[-1] object-cover 2xl:block"
      widths={[320, 576, 640, 768, 1024, 1280, 1536, candlesLeft.width]}
      sizes={`100vw`}
    />
    <div class="relative z-10 container py-4">
      <MainLogo
        size={componentProps.brandObj.nameToLower}
        logo={componentProps.logo()}
        square={componentProps.customOptions?.logoSquare}
      />
    </div>
    <div class="relative z-10 container flex gap-4 py-4 md:pb-12">
      <div class="flex flex-col gap-4">
        <div>
          <h1
            class="text-heading1 text-secondary font-times"
            set:html={componentProps.features?.includes(Features.showcase)
              ? showcase({
                  words: 2,
                })
              : title[componentProps.lang]}
          />
          <p
            class="text-para-lead text-accent font-times text-balance"
            set:html={componentProps.features?.includes(Features.showcase)
              ? showcase({
                  words: 5,
                })
              : paraLead[componentProps.lang]}
          />
        </div>
        <div class="hidden flex-col gap-8 md:flex">
          <p
            class="max-w-[45ch] font-bold"
            set:html={componentProps.features?.includes(Features.showcase)
              ? showcase({
                  words: 30,
                })
              : para[componentProps.lang]}
          />
          <p
            class="font-bold"
            set:html={componentProps.features?.includes(Features.showcase)
              ? showcase({
                  words: 5,
                })
              : list.title[componentProps.lang]}
          />
          <ul>
            {
              list.data.map((li) => (
                <li class="flex items-center gap-2 font-bold">
                  {/* Icon from Material Symbols by Google - https://github.com/google/material-design-icons/blob/master/LICENSE */}
                  <svg
                    class="text-secondary"
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                  >
                    <path
                      fill="currentColor"
                      d="m9.55 18l-5.7-5.7l1.425-1.425L9.55 15.15l9.175-9.175L20.15 7.4z"
                    />
                  </svg>
                  <span
                    set:html={
                      componentProps.features?.includes(Features.showcase)
                        ? showcase({
                            words: 5,
                          })
                        : li[componentProps.lang]
                    }
                  />
                </li>
              ))
            }
          </ul>
        </div>
      </div>
      <div class="flex items-end justify-start">
        <Image
          src={phone}
          alt="Phone"
          class=""
          widths={[320, 576, 640, 768, 1024, 1280, 1536, phone.width]}
          sizes={`
