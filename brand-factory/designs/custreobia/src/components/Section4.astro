      de: "",
      es: "",
      sv: "",
      pt: "",
      fi: "",
      pl: "",
      hu: "",
      th: "",
      ms: "",
      vi: "",
    },
  },
  "license",
  componentProps,
);

const buttonLabel: TranslationsType = textBy(
  {
    default: {
      en: "Download Now",
      it: "",
      tr: "",
      ro: "",
      ar: `حمّل الآن`,
      de: "",
      es: "Descargar ahora",
      sv: "",
      pt: "",
