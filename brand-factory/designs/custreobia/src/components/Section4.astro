    cysec: {
      en: "",
      it: "",
      tr: "",
      ro: "",
      ar: ``,
      de: "",
      es: "",
      sv: "",
      pt: "",
      fi: "",
      pl: "",
      hu: "",
      th: "",
      ms: "",
      vi: "",
    },
  },
  "license",
  componentProps,
);

const para: TranslationsType = textBy(
  {
    default: {
      en: `Download the FXORO App and stay connected with real-time market notifications and instant trading access.`,
      it: "",
      tr: "",
      ro: "",
      ar: `حمّل تطبيق FXORO وابقَ على اتصال دائم بإشعارات السوق الفورية وإمكانية الوصول الفوري للتداول.`,
      de: "",
      es: `Descarga la app de FXORO y mantente conectado con notificaciones del mercado en tiempo real y acceso instantáneo al trading.`,
      sv: "",
      pt: "",
      fi: "",
      pl: "",
      hu: "",
