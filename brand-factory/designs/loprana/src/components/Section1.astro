const customDisclaimer: TranslationsType = {
  en: `*This is a non-withdrawable trading bonus. <a target="_blank" class="underline underline-offset-2" href="https://global.fxoro.com/en/get-50-more-trading-power-2/">Terms and Conditions</a> Apply.`,
  it: ``,
  tr: ``,
  ro: ``,
  ar: `*هذه مكافأة تداول غير قابلة للسحب. <a target="_blank" class="underline underline-offset-2" href="https://global.fxoro.com/ar/get-50-more-trading-power-2/">تطبق الشروط</a> والأحكام.`,
