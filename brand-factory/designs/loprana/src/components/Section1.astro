---

<section id="section1" class="section1 py-section">
  <div class="space-y-section container">
    <h2
      class="text-heading2 font-black uppercase"
      set:html={componentProps.features?.includes(Features.showcase)
        ? showcase({
            words: 5,
          })
        : title[componentProps.lang]}
    />

    {
      paras.map((para) => (
        <p
          class="text-para-lead text-balance"
          set:html={
            componentProps.features?.includes(Features.showcase)
              ? showcase({
                  words: 30,
                })
              : para[componentProps.lang]
          }
        />
      ))
    }

    <ButtonDisclaimer
      componentProps={componentProps}
      disclaimer={{
        active: true,
        text: componentProps.features?.includes(Features.showcase)
          ? showcase({
              words: 10,
            })
          : customDisclaimer[componentProps.lang],
      }}
    >
      <Button
        variant={"default"}
        className={"js-modal-trigger w-full cursor-pointer p-6 font-black uppercase"}
        set:html={componentProps.features?.includes(Features.showcase)
          ? showcase({
              words: 2,
            })
          : button[componentProps.lang]}
      />
    </ButtonDisclaimer>
  </div>
</section>
