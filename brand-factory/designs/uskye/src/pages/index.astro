---
import Section1 from "@/components/Section1.astro";
import Section2 from "@/components/Section2.astro";
import Section3 from "@/components/Section3.astro";
import Section4 from "@/components/Section4.astro";
import Section5 from "@/components/Section5.astro";
import { brandFactory } from "../../../../globals/factory";
import { type FXOROGlobalSVGVariation } from "../../../../globals/types/brands/logo";
import type { ComponentProps } from "../../../../globals/types/component-props";
import { Features } from "../../../../globals/types/enums";
import type {
  LandingPageType,
  LicenseType,
  RegistrationType,
} from "../../../../globals/types/lp-params-type";
import { checkFeatures } from "../../../../globals/utils/check-features";
import Layout from "../layouts/Layout.astro";

const license: LicenseType = "fsa";
const lpType: LandingPageType = "classic";
const features = checkFeatures([
  // Features.readyForMail,
  Features.officialTerms,
  // Features.atheneum,
  // Features.showcase,
]);
const registrationType: RegistrationType = "sms_registration";

export interface CustomOptions {
  logoSquare: boolean;
  bonus?: "15" | "25";
}

const componentProps: ComponentProps<FXOROGlobalSVGVariation, CustomOptions> = {
  lang: "en",
  license,
  lpName: "Home",
  brandObj: brandFactory({
    brand: "fxoro_global",
    license,
    whatsapp: false,
    features,
  }),
  logo: function () {
    return this.brandObj.images.logoSVG.whiteOrange;
  },
  lpType,
  registrationType,
  customOptions: {
    logoSquare: false,
    bonus: "25",
  },
  features,
  fxoroFooter: true,
};
---

<Layout componentProps={componentProps}>
  <Section1 componentProps={componentProps} />
  <Section2 componentProps={componentProps} />
  <Section3 componentProps={componentProps} />
  <Section4 componentProps={componentProps} />
  <Section5 componentProps={componentProps} />
</Layout>
