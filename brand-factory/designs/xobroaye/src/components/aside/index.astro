---
import type { CustomOptions } from "@/pages/index.astro";
import { Image } from "astro:assets";
import MainLogo from "../../../../../globals/components/logos/MainLogo.astro";
import type { FXOROGlobalSVGVariation } from "../../../../../globals/types/brands/logo";
import type { ComponentProps } from "../../../../../globals/types/component-props";
import type { TranslationsType } from "../../../../../globals/types/translations";
import phone from "../../assets/aside/default/fxoro_phone.png";
import Default from "./default.astro";
import Carousel from "./carousel.astro";
import { cn } from "@/lib/utils";

interface Props {
  componentProps: ComponentProps<FXOROGlobalSVGVariation, CustomOptions>;
}
const { componentProps } = Astro.props;
---

<aside
  class={cn(
    "relative hidden  lg:block",
    !componentProps.customOptions?.asideType ||
      componentProps.customOptions?.asideType === "default"
      ? "p-4 pt-16"
      : "",
  )}
>
  {
    (!componentProps.customOptions?.asideType ||
      componentProps.customOptions?.asideType === "default") && (
      <Default componentProps={componentProps} />
    )
  }

  {
    componentProps.customOptions?.asideType === "carousel" && (
      <Carousel componentProps={componentProps} />
    )
  }
</aside>

<style is:global>
  /* @reference "../styles/global.css"; */
</style>
