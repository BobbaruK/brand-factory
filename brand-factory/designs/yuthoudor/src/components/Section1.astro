      <h2
        set:html={componentProps.features?.includes(Features.showcase)
          ? showcase({
              words: 5,
            })
          : title[componentProps.lang]}
        class="font-raleway text-heading2 pb-2 text-center font-extrabold md:max-w-[40ch] md:text-start lg:mb-16"
      />
