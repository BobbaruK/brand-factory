        class="mt-8 flex flex-col items-start justify-center gap-8 md:flex-row md:flex-wrap md:items-start md:justify-start md:gap-0 md:gap-y-12 md:text-start"
      >
        {
          bullets.map((bullet) => {
            return (
              <div class="flex h-full items-center justify-center gap-2 md:basis-1/2 md:items-start md:justify-start lg:gap-6 xl:gap-9">
                <Image
                  src={bullet.iconImage}
                  alt="Graph presentation"
                  class="w-10"
                  widths={[320, bullet.iconImage.width]}
                  sizes={`40px`}
                />
                <div>
                  <h3
                    set:html={
                      componentProps.features?.includes(Features.showcase)
                        ? showcase({
                            words: 2,
