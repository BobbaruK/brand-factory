<section id="courses" class="relative py-8 lg:py-16">
  <div class="relative z-10 container flex flex-col gap-1 lg:flex-row">
    <div class="flex flex-col items-start justify-center gap-8">
      <h2
        set:html={componentProps.features?.includes(Features.showcase)
          ? showcase({
              words: 5,
            })
          : title[componentProps.lang]}
        class="text-heading2 leading-heading2 text-primary font-extrabold text-balance uppercase"
      />
      <p
        set:html={componentProps.features?.includes(Features.showcase)
          ? showcase({
              words: 15,
            })
          : para1[componentProps.lang]}
        class="text-para-lead text-balance"
      />

      <ul class="grid w-full grid-cols-1 gap-5 md:grid-cols-2 md:gap-10">
        {
          bullets.map((bullet) => (
            <li class="text-para-lead text-primary flex items-center gap-2 font-extrabold uppercase">
              <div set:html={bullet.icon} class="text-secondary" />
              <span
                set:html={
                  componentProps.features?.includes(Features.showcase)
                    ? showcase({
                        words: 3,
                      })
                    : bullet.label[componentProps.lang]
                }
              />
            </li>
          ))
        }
      </ul>

      <p
        set:html={componentProps.features?.includes(Features.showcase)
          ? showcase({
              words: 30,
            })
          : para2[componentProps.lang]}
        class="text-para-lead text-balance"
      />
    </div>
  </div>
</section>

<style>
  @reference "../styles/global.css";

  ul {
    counter-reset: bullet;
  }

  li::before {
    counter-increment: bullet;
    content: counter(bullet) ". ";
    @apply size-6 min-w-6;
  }
</style>
