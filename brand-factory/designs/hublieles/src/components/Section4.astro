---

<section
  id="webinars"
  class="bg-primary text-primary-foreground relative overflow-hidden py-8 xl:py-16"
>
  <div class="relative z-10 container flex flex-col gap-1 xl:flex-row">
    <div class="flex flex-col items-start justify-center gap-8 xl:max-w-[90ch]">
      <h2
        set:html={componentProps.features?.includes(Features.showcase)
          ? showcase({
              words: 5,
            })
          : title[componentProps.lang]}
        class="leading-heading2 text-heading2 text-accent font-extrabold text-balance uppercase"
      />
      <p
        set:html={componentProps.features?.includes(Features.showcase)
          ? showcase({
              words: 30,
            })
          : para1[componentProps.lang]}
        class="text-para-lead text-balance"
      />

      <p
        set:html={componentProps.features?.includes(Features.showcase)
          ? showcase({
              words: 15,
            })
          : para2[componentProps.lang]}
        class="text-para-lead text-balance"
      />

      <ButtonDisclaimer
        componentProps={componentProps}
        disclaimer={{
          active: false,
        }}
      >
        {
          componentProps.customOptions?.designVersion ===
          "payment-authorization" ? (
            <a
              href={"#testimonials"}
              set:html={
                componentProps.features?.includes(Features.showcase)
                  ? showcase({
                      words: 2,
                    })
                  : buttonLabel[componentProps.lang]
              }
              class={cn(
                buttonVariants({ variant: "secondary" }),
                "h-auto cursor-pointer gap-4 px-16 py-4 text-lg font-bold text-white uppercase md:px-20 md:py-6 lg:text-2xl",
              )}
            />
          ) : (
            <Button
              variant={"secondary"}
              className={
                "js-modal-trigger h-auto cursor-pointer gap-4 px-16 py-4 text-lg font-bold text-white uppercase md:px-20 md:py-6 lg:text-2xl"
              }
              set:html={
                componentProps.features?.includes(Features.showcase)
                  ? showcase({
                      words: 2,
                    })
                  : buttonLabel[componentProps.lang]
              }
            />
          )
        }
      </ButtonDisclaimer>
    </div>
    <div class="relative grow">
      <Image
        src={componentProps.lang === "ar" ? phones : laptopDude}
        alt="Background"
        class="bottom-0 -mb-10 w-full max-w-[350px] xl:absolute xl:h-[560px] xl:w-auto xl:max-w-none"
        widths={[320, 576, 640, 768, 1024, 1280, 1536, laptopDude.width]}
        sizes={`
          (max-width: 640px) 640px,
          100vw
        `}
      />
    </div>
  </div>
</section>

<style>
  ul {
    counter-reset: bullet;
  }

  li::before {
    counter-increment: bullet;
    content: counter(bullet) ". ";
  }
</style>
