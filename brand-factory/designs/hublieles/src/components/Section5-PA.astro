                <ol class="list-inside list-disc">
                  {card.list.map((li) => (
                    <li set:html={li[componentProps.lang]} />
                  ))}
                </ol>
              </CardContent>
              <CardFooter className="items-center justify-center mt-auto">
                <p
                  set:html={card.price[componentProps.lang]}
