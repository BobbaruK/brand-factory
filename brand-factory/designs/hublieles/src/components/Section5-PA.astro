        <Button
          variant={"secondary"}
          className={"js-modal-trigger h-auto cursor-pointer gap-4 px-16 py-4 text-lg font-bold text-white uppercase md:px-20 md:py-6 lg:text-2xl"}
          set:html={componentProps.features?.includes(Features.showcase)
