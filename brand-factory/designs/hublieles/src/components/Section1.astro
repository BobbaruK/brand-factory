---
import { Image } from "astro:assets";
import { ButtonDisclaimer } from "../../../../globals/components/button-disclaimer";
import { showcase } from "../../../../globals/features/showcase/text";
import type { ComponentProps } from "../../../../globals/types/component-props";
import { Features } from "../../../../globals/types/enums";
import type { TranslationsType } from "../../../../globals/types/translations";
import heroImage from "../assets/hero-img.png";
import heroImageAr from "../assets/hero-img-ar.png";
import { Button, buttonVariants } from "./ui/button";
import { textBy } from "../../../../globals/utils/text-by";
import type { CustomOptions } from "@/pages/index.astro";
import { cn } from "@/lib/utils";

interface Props {
  componentProps: ComponentProps<any, CustomOptions>;
}
const { componentProps } = Astro.props;

const title: TranslationsType = textBy(
  {
    default: {
      en: `Blending knowledge, technology, and mentorship for your <span class="bg-accent leading-normal p-1 rounded-md">trading success</span>`,
      it: `Fusione di conoscenza, tecnologia e mentorship per il tuo <span class="bg-accent leading-normal p-1 rounded-md">successo nel trading</span>`,
      tr: `Bilgi, teknoloji ve mentorluk ile <span class="bg-accent leading-normal p-1 rounded-md">yatırım başarınızı</span> birleştiriyoruz`,
      ro: `Combinăm cunoștințele, tehnologia și mentoratul pentru <span class="bg-accent leading-normal p-1 rounded-md">succesul tău în tranzacționare</span>`,
      ar: `نمزج بين المعرفة والتكنولوجيا والإرشاد من أجل <span class="bg-accent leading-normal p-1 rounded-md">نجاحك في التداول</span>`,
      de: `Wissen, Technologie und Mentoring vereint für deinen <span class="bg-accent leading-normal p-1 rounded-md">Trading-Erfolg</span>`,
      es: `Combinando conocimiento, tecnología y mentoría para tu <span class="bg-accent leading-normal p-1 rounded-md">éxito en el trading</span>`,
      sv: `Vi kombinerar kunskap, teknik och mentorskap för din <span class="bg-accent leading-normal p-1 rounded-md">tradingframgång</span>`,
      pt: `Combinando conhecimento, tecnologia e mentoria para o seu <span class="bg-accent leading-normal p-1 rounded-md">sucesso no trading</span>`,
      fi: `Yhdistämme tiedon, teknologian ja mentoroinnin <span class="bg-accent leading-normal p-1 rounded-md">kaupankäynnin menestykseesi</span>`,
      pl: `Łączymy wiedzę, technologię i mentoring dla twojego <span class="bg-accent leading-normal p-1 rounded-md">sukcesu w handlu</span>`,
      hu: `A tudást, a technológiát és a mentorálást ötvözzük <span class="bg-accent leading-normal p-1 rounded-md">kereskedési sikeredért</span>`,
      th: `ผสานความรู้ เทคโนโลยี และการให้คำปรึกษาเพื่อ<span class="bg-accent leading-normal p-1 rounded-md">ความสำเร็จในการเทรด</span>ของคุณ`,
      ms: `Menggabungkan pengetahuan, teknologi dan bimbingan untuk <span class="bg-accent leading-normal p-1 rounded-md">kejayaan dagangan anda</span>`,
      vi: `Kết hợp kiến thức, công nghệ và sự cố vấn để mang lại <span class="bg-accent leading-normal p-1 rounded-md">thành công giao dịch của bạn</span>`,
    },
    "payment-authorization": {
      en: `Empowering your trading journey with education and technology`,
      it: `Potenzia il tuo percorso di trading con educazione e tecnologia`,
      tr: `Eğitim ve teknoloji ile yatırım yolculuğunuzu güçlendiriyoruz`,
      ro: `Îți susținem parcursul în tranzacționare prin educație și tehnologie`,
      ar: `ندعم رحلتك في التداول من خلال التعليم والتكنولوجيا`,
      de: `Wir stärken deinen Trading-Weg durch Bildung und Technologie`,
      es: `Impulsamos tu camino en el trading con educación y tecnología`,
      sv: `Vi stärker din tradingresa med utbildning och teknik`,
      pt: `Impulsionando sua jornada no trading com educação e tecnologia`,
      fi: `Tuemme kaupankäyntipolkuasi koulutuksen ja teknologian avulla`,
      pl: `Wzmacniamy twoją drogę w handlu dzięki edukacji i technologii`,
      hu: `Támogatjuk kereskedési utadat oktatással és technológiával`,
      th: `เสริมพลังการเทรดของคุณด้วยการศึกษาและเทคโนโลยี`,
      ms: `Memperkasa perjalanan dagangan anda dengan pendidikan dan teknologi`,
      vi: `Tiếp sức cho hành trình giao dịch của bạn bằng giáo dục và công nghệ`,
    },
  },
  "designVersion",
  componentProps.customOptions,
);

const paras: TranslationsType[] = [
  textBy(
    {
      default: {
        en: `Welcome to ${componentProps.brandObj.name}, where innovation meets tradition. Our academy combines the latest global trading technologies with the personal touch of Italian mentorship.`,
        it: `Benvenuto in ${componentProps.brandObj.name}, dove l'innovazione incontra la tradizione. La nostra accademia unisce le più recenti tecnologie di trading globali con il tocco personale della mentorship italiana.`,
        tr: `${componentProps.brandObj.name}'e hoş geldiniz, burada yenilik gelenekle buluşuyor. Akademimiz, en son küresel işlem teknolojilerini İtalyan mentorluk dokunuşuyla birleştiriyor.`,
        ro: `Bine ai venit la ${componentProps.brandObj.name}, unde inovația întâlnește tradiția. Academia noastră combină cele mai recente tehnologii globale de tranzacționare cu atingerea personală a mentoratului italian.`,
        ar: `مرحبًا بك في ${componentProps.brandObj.name}، حيث تلتقي الابتكار بالتقاليد. أكاديميتنا تجمع بين أحدث تقنيات التداول العالمية واللمسة الشخصية للإرشاد الإيطالي.`,
        de: `Willkommen bei ${componentProps.brandObj.name}, wo Innovation auf Tradition trifft. Unsere Akademie vereint die neuesten globalen Handelstechnologien mit der persönlichen Note italienischer Mentorschaft.`,
        es: `Bienvenido a ${componentProps.brandObj.name}, donde la innovación se encuentra con la tradición. Nuestra academia combina las últimas tecnologías de trading global con el toque personal de la mentoría italiana.`,
        sv: `Välkommen till ${componentProps.brandObj.name}, där innovation möter tradition. Vår akademi kombinerar den senaste globala handelstekniken med den personliga touchen från italiensk mentorskap.`,
        pt: `Bem-vindo ao ${componentProps.brandObj.name}, onde a inovação encontra a tradição. Nossa academia combina as mais recentes tecnologias globais de trading com o toque pessoal da mentoria italiana.`,
        fi: `Tervetuloa ${componentProps.brandObj.name}iin, missä innovaatio kohtaa perinteen. Akatemiamme yhdistää uusimmat globaalit kaupankäyntiteknologiat italialaisen mentoroinnin henkilökohtaiseen kosketukseen.`,
        pl: `Witamy w ${componentProps.brandObj.name}, gdzie innowacja spotyka się z tradycją. Nasza akademia łączy najnowsze globalne technologie handlowe z osobistym podejściem włoskiego mentoringu.`,
        hu: `Üdvözlünk a(z) ${componentProps.brandObj.name}-nál, ahol az innováció találkozik a hagyománnyal. Akadémiánk a legújabb globális kereskedési technológiákat ötvözi az olasz mentorálás személyes jellegével.`,
        th: `ยินดีต้อนรับสู่ ${componentProps.brandObj.name} ที่ซึ่งนวัตกรรมมาพบกับประเพณี สถาบันของเราผสานเทคโนโลยีการเทรดล่าสุดเข้ากับการให้คำปรึกษาสไตล์อิตาลี`,
        ms: `Selamat datang ke ${componentProps.brandObj.name}, di mana inovasi bertemu tradisi. Akademi kami menggabungkan teknologi perdagangan global terkini dengan sentuhan peribadi bimbingan Itali.`,
        vi: `Chào mừng đến với ${componentProps.brandObj.name}, nơi hội tụ giữa đổi mới và truyền thống. Học viện của chúng tôi kết hợp công nghệ giao dịch toàn cầu mới nhất với sự hướng dẫn mang dấu ấn cá nhân từ Ý.`,
      },
      "payment-authorization": {
        en: ``,
        it: ``,
        tr: ``,
        ro: ``,
        ar: `في تريدينغ أثينيوم (${componentProps.brandObj.name})، مهمتنا هي تزويد كل متداول — مبتدئًا كان أم متقدمًا — بالأدوات التعليمية اللازمة لتحقيق النجاح. استكشف عالمًا من المعرفة من خلال ندواتنا التعليمية المباشرة، والوصول إلى تطبيقات التداول الحديثة، والتنبيهات المتقدمة المصممة لتعزيز مهاراتك في التداول.`,
        de: ``,
        es: ``,
        sv: ``,
        pt: ``,
        fi: ``,
        pl: ``,
        hu: ``,
        th: ``,
        ms: ``,
        vi: ``,
      },
    },
    "designVersion",
    componentProps.customOptions,
  ),
  textBy(
    {
      default: {
        en: ``,
        it: ``,
        tr: ``,
        ro: ``,
        ar: `تم تصميم مواردنا الموثوقة، وتحليلات السوق، والإشارات الفورية لمساعدتك على اتخاذ قرارات تداول أكثر ذكاءً — مع إعطاء الأولوية دائمًا لنموك وتطوّرك.`,
        de: ``,
        es: ``,
        sv: ``,
        pt: ``,
        fi: ``,
        pl: ``,
        hu: ``,
        th: ``,
        ms: ``,
        vi: ``,
      },
      "payment-authorization": {
        en: `Our trusted resources, market insights, and real-time signals are tailored to help you make smarter trading decisions — always putting your growth first.`,
        it: `Le nostre risorse affidabili, intuizioni di mercato e segnali in tempo reale sono pensati per aiutarti a prendere decisioni di trading più intelligenti — mettendo sempre la tua crescita al primo posto.`,
        tr: `Güvenilir kaynaklarımız, piyasa analizlerimiz ve gerçek zamanlı sinyallerimiz daha akıllı yatırım kararları almanız için özelleştirilmiştir — büyümenizi her zaman ön planda tutuyoruz.`,
        ro: `Resursele noastre de încredere, perspectivele asupra pieței și semnalele în timp real sunt adaptate pentru a te ajuta să iei decizii de tranzacționare mai inteligente — punând mereu pe primul loc creșterea ta.`,
        ar: `مواردنا الموثوقة، ورؤى السوق، والإشارات الفورية مصممة لمساعدتك على اتخاذ قرارات تداول أكثر ذكاءً — مع إعطاء الأولوية دائمًا لنموك.`,
        de: `Unsere vertrauenswürdigen Ressourcen, Markteinblicke und Echtzeit-Signale sind darauf ausgelegt, dir zu helfen, intelligentere Handelsentscheidungen zu treffen – wobei dein Wachstum stets im Vordergrund steht.`,
        es: `Nuestros recursos confiables, conocimientos del mercado y señales en tiempo real están diseñados para ayudarte a tomar decisiones de trading más inteligentes — siempre priorizando tu crecimiento.`,
        sv: `Våra pålitliga resurser, marknadsinsikter och realtidssignaler är utformade för att hjälpa dig fatta smartare tradingbeslut — med ditt personliga utvecklande i fokus.`,
        pt: `Nossos recursos confiáveis, insights de mercado e sinais em tempo real são projetados para ajudar você a tomar decisões de trading mais inteligentes — sempre priorizando seu crescimento.`,
        fi: `Luotettavat resurssimme, markkinanäkemykset ja reaaliaikaiset signaalit on suunniteltu auttamaan sinua tekemään älykkäämpiä kaupankäyntipäätöksiä — asettaen aina kasvusi etusijalle.`,
        pl: `Nasze zaufane zasoby, analizy rynkowe i sygnały w czasie rzeczywistym są dostosowane, aby pomóc ci podejmować mądrzejsze decyzje inwestycyjne — zawsze stawiając twój rozwój na pierwszym miejscu.`,
        hu: `Megbízható forrásaink, piaci betekintéseink és valós idejű jelzéseink úgy lettek kialakítva, hogy segítsenek okosabb kereskedési döntéseket hozni – mindig a fejlődésedet előtérbe helyezve.`,
        th: `ทรัพยากรที่เชื่อถือได้ ข้อมูลเชิงลึกของตลาด และสัญญาณแบบเรียลไทม์ของเราได้รับการออกแบบมาเพื่อช่วยให้คุณตัดสินใจซื้อขายได้อย่างชาญฉลาดยิ่งขึ้น — โดยให้ความสำคัญกับการเติบโตของคุณเป็นอันดับแรกเสมอ`,
        ms: `Sumber yang boleh dipercayai kami, pandangan pasaran dan isyarat masa nyata disesuaikan untuk membantu anda membuat keputusan dagangan yang lebih bijak — sentiasa meletakkan pertumbuhan anda diutamakan.`,
        vi: `Các tài nguyên đáng tin cậy, phân tích thị trường và tín hiệu thời gian thực của chúng tôi được thiết kế để giúp bạn đưa ra quyết định giao dịch thông minh hơn — luôn ưu tiên sự phát triển của bạn.`,
      },
    },
    "designVersion",
    componentProps.customOptions,
  ),
];

const buttonLabel: TranslationsType = textBy(
  {
    default: {
      en: `Enroll now`,
      it: `Iscriviti ora`,
      tr: `Hemen kaydol`,
      ro: `Înscrie-te acum`,
      ar: `سجّل الآن`,
      de: `Jetzt anmelden`,
      es: `Inscríbete ahora`,
      sv: `Registrera dig nu`,
      pt: `Inscreva-se agora`,
      fi: `Ilmoittaudu nyt`,
      pl: `Zapisz się teraz`,
      hu: `Iratkozz fel most`,
      th: `สมัครตอนนี้`,
      ms: `Daftar sekarang`,
      vi: `Đăng ký ngay`,
    },
    "payment-authorization": {
      en: `Start learning today`,
      it: `Inizia a imparare oggi`,
      tr: `Bugün öğrenmeye başla`,
      ro: `Începe să înveți astăzi`,
      ar: `ابدأ التعلم اليوم`,
      de: `Beginne noch heute mit dem Lernen`,
      es: `Empieza a aprender hoy`,
      sv: `Börja lära dig idag`,
      pt: `Comece a aprender hoje`,
      fi: `Aloita oppiminen tänään`,
      pl: `Zacznij się uczyć już dziś`,
      hu: `Kezdj el tanulni még ma`,
      th: `เริ่มเรียนรู้วันนี้`,
      ms: `Mula belajar hari ini`,
      vi: `Bắt đầu học ngay hôm nay`,
    },
  },
  "designVersion",
  componentProps.customOptions,
);
---

<section id="home" class="section1 overflow-hidden pt-8 lg:py-16">
  <div class="container flex flex-col gap-1 lg:flex-row">
    <div
      class="flex flex-col items-start justify-center gap-8 lg:max-w-[70ch] xl:max-w-[80ch]"
    >
      <h1
        set:html={componentProps.features?.includes(Features.showcase)
          ? showcase({
              words: 10,
              spanClasses: "bg-accent leading-normal p-1 rounded-md",
            })
          : title[componentProps.lang]}
        class="text-heading1 leading-heading1 font-extrabold text-balance uppercase"
      />
      {
        paras.map((para) => (
          <p
            set:html={
              componentProps.features?.includes(Features.showcase)
                ? showcase({
                    words: 30,
                  })
                : para[componentProps.lang]
            }
            class="text-para-lead text-balance"
          />
        ))
      }

      <ButtonDisclaimer
        componentProps={componentProps}
        disclaimer={{
          active: false,
        }}
      >
        {
          componentProps.customOptions?.designVersion ===
          "payment-authorization" ? (
            <a
              href={"#testimonials"}
              set:html={
                componentProps.features?.includes(Features.showcase)
                  ? showcase({
                      words: 2,
                    })
                  : buttonLabel[componentProps.lang]
              }
              class={cn(
                buttonVariants({ variant: "secondary" }),
                "h-auto cursor-pointer gap-4 px-16 py-4 text-lg font-bold text-white uppercase md:px-20 md:py-6 lg:text-2xl",
              )}
            />
          ) : (
            <Button
              variant={"secondary"}
              className={
                "js-modal-trigger h-auto cursor-pointer gap-4 px-16 py-4 text-lg font-bold text-white uppercase md:px-20 md:py-6 lg:text-2xl"
              }
              set:html={
                componentProps.features?.includes(Features.showcase)
                  ? showcase({
                      words: 2,
                    })
                  : buttonLabel[componentProps.lang]
              }
            />
          )
        }
      </ButtonDisclaimer>
    </div>
    <div class="relative grow">
      <Image
        src={componentProps.lang === "ar" ? heroImageAr : heroImage}
        alt="Background"
        class="pointer-events-none -mb-20 w-full max-w-[350px] lg:absolute lg:-bottom-12 lg:h-[560px] lg:w-auto lg:max-w-none xl:-start-28 xl:-bottom-48 xl:h-[730px]"
        widths={[320, 576, 640, 768, 1024, 1280, 1536, heroImage.width]}
        sizes={`
        (max-width: 640px) 640px,
        100vw
      `}
      />
    </div>
  </div>
</section>
