  {
    title: {
      en: "",
      it: "",
      tr: "",
      ro: "",
      ar: "",
      de: "",
      es: "Reciba su guía gratuita en PDF",
      sv: "",
      pt: "",
      fi: "",
      pl: ``,
      hu: "",
      th: "",
      ms: "",
      vi: "",
      showcase: "",
    },
    svgIcon: professionalBlackSection1Icon1,
  },
  {
    title: {
      en: "",
      it: ``,
      tr: "",
      ro: "",
      ar: "",
      de: "",
