---

<section id="section1" class="section1 space-y-ySpacing py-ySpacing">
  <div class="container">
    <h2
      class="text-heading2 leading-heading2 font-black uppercase sm:text-center"
      set:html={componentProps.features?.includes(Features.showcase)
        ? showcase({
            words: 5,
          })
        : title[componentProps.lang]}
    />
  </div>
  <div
    class="gap-custom container flex flex-col sm:text-center md:flex-row md:justify-between"
  >
    {
      articles.map((article) => (
        <article class="flex flex-col items-center gap-2">
          <div
            class="size-22 self-center lg:size-32 [&>svg]:h-full [&>svg]:w-full"
            set:html={article.icon}
          />
          <h3
            class="text-heading3 leading-heading3 text-primary font-black"
            set:html={
              componentProps.features?.includes(Features.showcase)
                ? showcase({
                    words: 2,
                  })
                : article.title[componentProps.lang]
            }
          />
          <p
            class="text-para-lead text-balance lg:max-w-[25ch]"
            set:html={
              componentProps.features?.includes(Features.showcase)
                ? showcase({
