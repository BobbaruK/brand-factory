---

<section id="section3">
  <div class="container space-y-4">
    <h2
      set:html={infoSection3.title[componentProps.lang]}
      class="text-lg font-medium"
    />

    {
      infoSection3.paras?.map((para) => (
        <p set:html={para[componentProps.lang]} class="mb-2" />
      ))
    }

    <ul class="list-inside list-disc">
      {
        infoSection3.list?.map((li) => (
          <li set:html={li[componentProps.lang]} class="mb-2" />
        ))
      }
    </ul>
  </div>
</section>
