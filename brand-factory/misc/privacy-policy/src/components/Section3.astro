import type { InfoSection } from "@/types/InfoSection";
import type { ComponentProps } from "../../../../../../globals/types/ComponentProps";

interface Props {
  componentProps: ComponentProps;
}
const { componentProps } = Astro.props;

const infoSection3: InfoSection = {
  title: {
    en: "How We Use Your Information",
    it: "Come Utilizziamo le Tue Informazioni",
    tr: "",
    ro: "",
    ar: "",
    de: "",
    es: "",
    sv: "",
    pt: "",
    fi: "",
    pl: ``,
    hu: "",
    th: "",
    ms: "",
    vi: "",
  },
  paras: [
    {
      en: "We use your information for the following purposes:",
      it: "Utilizziamo le tue informazioni per i seguenti scopi:",
      tr: "",
      ro: "",
      ar: "",
      de: "",
      es: "",
      sv: "",
      pt: "",
      fi: "",
      pl: ``,
      hu: "",
      th: "",
      ms: "",
      vi: "",
    },
  ],

  list: [
    {
      en: `To provide, operate, and improve our services`,
      it: "Fornire, gestire e migliorare i nostri servizi",
      tr: "",
      ro: "",
      ar: "",
      de: "",
      es: "",
      sv: "",
      pt: "",
      fi: "",
      pl: ``,
      hu: "",
      th: "",
      ms: "",
      vi: "",
    },
    {
      en: `To personalize user experience`,
      it: "Personalizzare l'esperienza dell'utente",
      tr: "",
      ro: "",
      ar: "",
      de: "",
      es: "",
