interface Props {
  componentProps: ComponentProps;
}
const { componentProps } = Astro.props;

const infoSection6: InfoSection = {
  title: {
    en: "Changes to This Privacy Policy",
    it: "Modifiche a Questa Informativa sulla Privacy",
    tr: "Bu Gizlilik Politikasındaki Değişiklikler",
    ro: "Modificări ale acestei Politici de Confidențialitate",
    ar: "التغييرات على سياسة الخصوصية هذه",
    de: "Änderungen dieser Datenschutzrichtlinie",
    es: "Cambios en esta Política de Privacidad",
    sv: "Ändringar i denna Integritetspolicy",
    pt: "Alterações a Esta Política de Privacidade",
    fi: "Muutokset tähän Tietosuojakäytäntöön",
    pl: "Zmiany w niniejszej Polityce Prywatności",
    hu: "Változások a Jelen Adatvédelmi Szabályzatban",
    th: "การเปลี่ยนแปลงนโยบายความเป็นส่วนตัวนี้",
    ms: "Perubahan kepada Dasar Privasi Ini",
    vi: "Những thay đổi đối với Chính sách Bảo mật này",
  },
  paras: [
    {
      en: `We may update this Privacy Policy from time to time. Any changes will be posted on this page, and we encourage you to review it periodically.`,
      it: "Possiamo aggiornare questa Informativa sulla Privacy di tanto in tanto. Eventuali modifiche saranno pubblicate su questa pagina, e ti invitiamo a consultarla periodicamente.",
      tr: "Bu Gizlilik Politikasını zaman zaman güncelleyebiliriz. Herhangi bir değişiklik bu sayfada yayınlanacak ve periyodik olarak gözden geçirmenizi tavsiye ederiz.",
