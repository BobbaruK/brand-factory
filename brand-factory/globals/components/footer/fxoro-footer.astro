---
import { type ComponentProps } from '../../types/component-props';


interface Props {
  componentProps: ComponentProps;
}
const { componentProps } = Astro.props;
---

<div id="globalFooter" data-lang={componentProps.lang} data-type={componentProps.langType}></div>

<script src="https://assets.smartsupporthub.com/js/bundle/global_footer2.js?1255_29012024"></script>

<style is:global lang="scss">
  #globalFooter {
    footer {
      background-color: oklch(0.37 0.01 73.51);
      color: white;
      padding-block: 16px;
      display: flex;
      flex-direction: column;
      gap: 24px;

      .second-container {
        > div {
          display: flex;
          gap: 16px;
          align-items: center;
          justify-content: space-around;
          flex-wrap: wrap;

          > div:nth-child(3) {
            > div {
              display: flex;
              flex-wrap: wrap;
              justify-content: space-around;
              gap: 16px;
              span {
                background-color: white;
                padding: 20px;
                width: 50px;
                height: 50px;
                display: flex;
                justify-content: center;
                align-items: center;
                border-radius: 9999px;
              }
            }
          }
        }
      }

      .third-container {
        div:has(p) {
          display: flex;
          flex-direction: column;
          justify-content: center;
          gap: 16px;
        }
      }
    }
  }
</style>